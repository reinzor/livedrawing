html
    head
        meta(charset='utf-8')
        title LiveDrawing - NodeJS
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='/css/client.css')
        script(src='http://code.jquery.com/jquery.js')
        script(src='/js/bootstrap.min.js')
