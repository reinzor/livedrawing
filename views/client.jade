    body
        .navbar.navbar-fixed-top
          .navbar-inner
              a.brand LiveDrawing
              ul.nav.pull-right 
                li.dropdown
                  a.dropdown-toggle(data-toggle='dropdown')
                    i.icon-circle.icon-large
                  ul.dropdown-menu
                    li
                      a
                        i.icon-circle
                    li
                      a
                        i.icon-circle.icon-large
                    li
                      a
                        i.icon-circle.icon-2x
                li.dropdown
                  a.dropdown-toggle(data-toggle='dropdown')
                    i.icon-tint.icon-large
                  ul.dropdown-menu
                    li
                      a
                        i.icon-tint.icon-large(style='color: black;')
                    li
                      a
                        i.icon-tint.icon-large(style='color: red;')
                    li
                      a
                        i.icon-tint.icon-large(style='color: yellow;')
                    li
                      a
                        i.icon-tint.icon-large(style='color: blue;')
                    li
                      a
                        i.icon-tint.icon-large(style='color: green;')
                li.divider-vertical
                li
                  a
                    i.icon-ok.icon-large.icon-white
                li
                  a
                    i.icon-refresh.icon-large
        canvas#canvas
